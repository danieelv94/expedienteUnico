<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include('../includes/head') %>
  </head>
  <body>
    <%- include('../includes/header') %>

    <div class="container" style="margin-top: 80px !important">
      <div class="row justify-content-md-center mb-5">
        <div class="col-md-4 mb-5">
          <h3 class="text-center">
            Registrar Expediente
            <hr />
          </h3>
          <form action="/obras" method="POST">
            <div class="mb-3">
              <label for="nombre_usuario" class="form-label">Obra</label>
              <input type="text" name="nombre_usuario" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="email_usuario" class="form-label">Descripción de Obra</label>
              <input type="text" name="email_usuario" class="form-control" />
            </div>
            <div class="mb-3">
              <label for="curso_alumno">Responsable</label>
              <select name="curso_alumno" class="form-select">
                <option value="">Seleccionar Encargado de Obra</option>
                <option value="Armando">Armando</option>
                <option value="Fernanda">Fernanda</option>
                <option value="Medina">Medina</option>
                <option value="Leopoldo">Leopoldo</option>
              </select>
            </div>
          
            <div class="d-grid gap-2 col-12 mx-auto mt-4 mb-4">
              <button class="btn btn-primary" type="submit">Registrar Expediente</button>
            </div>
          </form>          
        </div>

        <div class="col-md-8 py-3 custom_table">
          <h3 class="text-center">
            Lista de Expedientes
            <hr />
          </h3>

          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th>#</th>
                  <th>Obra</th>
                  <th>Descripción Obra</th>
                  <th>Encargado</th>
                  <th>Acciones</th>
                </tr>
              </thead>
              <tbody>
                <% let contador = 1; %>
                <% obras.forEach(function(estudiante) { %>
                  <tr>
                    <th scope="row"><%= contador %></th>
                    <td><%= estudiante.nombre_obra %></td>
                    <td><%= estudiante.descripcion_obra %></td>
                    <td><%= estudiante.fecha_inicio %></td>
                    <td>
                      <span style="display: flex; justify-content: space-between">
                        <a
                        class="btn btn-info info_especial"
                        href="/detalles/<%= estudiante.id_obra %>"
                        title="Ver Detalles de la Obra">
                        <i class="bi bi-person-bounding-box"></i>
                      </a>


                        <a
                          class="btn btn-success success_especial"
                          title="Editar datos de la Obra"
                          href="/formulario-actualizar-obra/<%= obras.id_obra %>">
                          <i class="bi bi-pencil-square"></i>
                        </a>
                        <form
                          action="/borrar-estudiante/<%= estudiante.id_usuario %>"
                          method="POST">
                          <input type="hidden" name="_method" value="DELETE" />
                          <button type="submit" class="btn btn-danger" onclick="return confirmarEliminacion()">
                            <i class="bi bi-trash"></i>
                            Eliminar
                          </button>
                        </form>
                      </span>
                    </td>
                  </tr>
                  <% contador++; %>
                  <% }); %>                  
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>

    <%- include('../includes/scripts') %>
    <script>
      function confirmarEliminacion() {
        return confirm("¿Estás seguro de que deseas eliminar este registro?");
      }
    </script>
  </body>
</html>
