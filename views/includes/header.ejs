<header class="header">
    <a href="./" class="logo">
      <img src="../public/imgs/logo.png" alt="Logo" />
    </a>
    <input class="menu-btn" type="checkbox" id="menu-btn" />
    <label class="menu-icon" for="menu-btn"><span class="navicon"></span></label>   
    <ul class="menu">   
      <li>
        <% if (req.session.user) { %>
          <a class="menu-item" href="<%= req.session.user.rol === 'DIVA administrador' ? '/obras' : 
                                        req.session.user.rol === 'DIVA' ? '/mis-obras' : 
                                        req.session.user.rol === 'Ventanilla' ? '/ventanilla-unica' : 
                                        '/' %>"> Inicio </a> 
        <% } else { %>
          <a class="menu-item" href="/"> Inicio </a>
        <% } %>
      </li>
      <% if (req.session.user && (req.session.user.rol === 'DIVA administrador' || req.session.user.rol === 'DIVA')) { %> 
        <% if (req.session.user.rol === 'DIVA administrador') { %>
          <li>
            <a class="menu-item" href="/obras"> Obras </a> 
          </li>
        <% } %>
        <% if (req.session.user.rol === 'DIVA') { %> 
          <li>
            <a class="menu-item" href="/mis-obras"> Mis Obras </a> 
          </li>
        <% } %>
      <% } %>
      <% if (req.session.user && req.session.user.rol === 'Ventanilla') { %>  
        <li>
          <a class="menu-item" href="/listar-obras-ventanilla"> Listar Obras </a> 
        </li>
      <% } %> 
      <li>
        <a class="menu-item" href="/logout"> Cerrar Sesión </a>
      </li>
    </ul>
  </header>